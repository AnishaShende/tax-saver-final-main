{
  "manifest_version": 3,
  "name": "Form Autofill Extension",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  }
}
